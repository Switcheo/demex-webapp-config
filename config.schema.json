{
    "title": "Demex Webapp Config",
    "description": "demex-webapp-config is a repository to allow frontends to fetch metadata associated with Demex",
    "type": "object",
    "required": [
        "network",
        "featured_markets",
        "omitted_markets"
    ],
    "properties": {
        "network": {
            "type": "string",
            "enum": [
                "mainnet",
                "testnet",
                "devnet"
            ]
        },
        "featured_markets": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/market"
            }
        },
        "omitted_markets": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/market"
            }
        }
    },
    "$defs": {
        "market": {
            "type": "string"
        }
    }
}